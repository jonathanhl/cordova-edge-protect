<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    id="cordova-plugin-edge-protect" version="1.0.0">
    <name>Enable Edge Protect</name>
    <description>Simple cordova plugin to enable edge protection for iPhone X and iPads running iOS 11+</description>
    <license>MIT</license>
    <keywords>cordova,ios,edge,protect,iphonex</keywords>
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="edgeProtectPlugin">
                <param name="ios-package" value="edgeProtectPlugin" />
                <param name="onload" value="true" />
            </feature>
        </config-file>
        <header-file src="src/ios/edgeProtectPlugin.h" />
        <source-file src="src/ios/edgeProtectPlugin.m" />
    </platform>
</plugin>
